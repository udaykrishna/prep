{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "msvc build",
        "type": "shell",
        "command": "cl.exe",
        "args": ["/EHsc", "/Zi", "/Fe:", "${fileDirname}/build/${fileBasenameNoExtension}.exe", 
                  "/Fo:", "${fileDirname}/build/${fileBasenameNoExtension}.obj", "${file}"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      }
    ]
  }